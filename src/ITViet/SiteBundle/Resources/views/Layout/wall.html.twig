{% if isMember %}
{% set member = app.security.getToken().getUser() %}
<img class="img-small" src="{{ member.getGravatar(30) }}" alt="Ava" />
<textarea class="post-wall" name=""></textarea>
{% else %}
<p class="muted">
  <small>
    {% trans with {'%href%': mlpath('_member_to_login')} %}You have to <a href="%href%">login</a> to post in this wall{% endtrans %}
  </small>
</p>
{% endif %}
