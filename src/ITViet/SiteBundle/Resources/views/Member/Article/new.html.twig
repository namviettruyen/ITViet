{% set ckeditor = true %}
{% extends 'ITVietSiteBundle::layout.html.twig' %}

{% block navigator %}
  {% include 'ITVietSiteBundle::navigator.html.twig' with {'active':'profile'} %}
{% endblock %}

{% block title %}{% trans %}Post New Article{% endtrans %}{% endblock %}

{% form_theme form _self %}
{% block field_errors %}
  {% if errors %}
  <div class="alert alert-error">
    {% for error in errors %}
    <p>{{ error.messageTemplate | trans(error.messageParameters, 'validators') }}</p>
    {% endfor %}
  </div>
  {% endif %}
{% endblock %}

{% block maincontents %}
