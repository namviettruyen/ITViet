<form id="fmLogin" class="form-horizontal" action="{{ mlpath('_member_login_check') }}" method="post">
  <fieldset>
    <legend>{% trans %}Sign in{% endtrans %}</legend>
    <div class="control-group">
      <label class="control-label" for="username">{% trans %}Email{% endtrans %}</label>
      <div class="controls">
        <input class="input-xlarge" type="text" id="username" name="_username" />
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="password">{% trans %}Password{% endtrans %}</label>
      <div class="controls">
        <input class="input-xlarge" type="password" id="password" name="_password" />
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <button class="btn btn-primary" type="submit" onclick="return CheckLoginForm();">{% trans %}Sign in{% endtrans %}</button>
      </div>
    </div>
  </fieldset>
</form>
