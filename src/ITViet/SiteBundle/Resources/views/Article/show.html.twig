{% extends 'ITVietSiteBundle::layout.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block navigator %}
  {% include 'ITVietSiteBundle:Layout:navigator.html.twig' with {'active':'none'} %}
{% endblock %}

{% block maincontents %}
<div class="clearfix">
{% render 'ITVietSiteBundle:Layout:leftSideBar' with {'standalone': true, 'active': article.category.id} %}
  <div class="main-wall">
    Wall for article information...
  </div>
  <div class="main-content">
    <h1 class="title">{{ article.title }}</h1>
    {{ article.content|raw }}
    <p class="text-right muted"><small>
    {% trans %}Posted At{% endtrans %}: {{ article.postedAt|date('d-m-Y') }}
    {% if article.modifiedAt is not null %}
      <br />{% trans %}Edited At{% endtrans %}: {{ article.modifiedAt|date('h:m A d-m-Y') }}
    {% endif %}
    </small></p>
  </div>
</div>
{% endblock %}
