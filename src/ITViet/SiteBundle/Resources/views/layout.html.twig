{% set locale = app.request.get('_locale') %}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>{% block title %}{% endblock %}</title>
    <meta name="description" content="{% block meta_description %}{% endblock %}" />
    <link rel="stylesheet" href="{{ asset('bs/css/bootstrap.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" />
    <script src="{{ asset('bs/js/jquery.js') }}" type="text/javascript"></script>
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container top">
          <a class="brand" href="#">Project</a>
          <div class="nav-collapse collapse">
            {% block navigator %}{% endblock %}
            {% include 'ITVietSiteBundle:Layout:formLogin.html.twig' %}
          </div> {# end nav-collapse #}
        </div> {# end container #}
        {% include 'ITVietSiteBundle:Layout:languageSelect.html.twig' %}
      </div>
    </div>
    <div class="container">
      {% include 'ITVietSiteBundle:Layout:flashMessage.html.twig' %}
      {% block maincontents %}{% endblock %}
      <hr>
      {% include 'ITVietSiteBundle:Layout:footer.html.twig' %}
    </div>
  <script src="{{ asset('bs/js/bootstrap.js') }}" type="text/javascript"></script>
  <script src="{{ asset('js/validate.js') }}" type="text/javascript"></script>
  {% include 'ITVietSiteBundle:Common:DatePicker.html.twig' %}
  </body>
</html>
