{% extends 'ITVietSiteBundle::layout.html.twig' %}

{% block title %}{% trans %}Home{% endtrans %}{% endblock %}

{% block navigator %}
  {% include 'ITVietSiteBundle:Layout:navigator.html.twig' with {'active':'home'} %}
{% endblock %}

{% block maincontents %}
<h1>Welcome!</h1>
<div class="clearfix">
  {% render 'ITVietSiteBundle:Layout:leftSideBar' with {'standalone': true, 'active': 'latest'} %}
  <div class="main-wall">
    <h2>{% trans %}Wall{% endtrans %}</h2>
    {% render 'ITVietSiteBundle:Layout:wall' with {'standalone': true} %}
  </div>
  <div class="main-content">
  {% include 'ITVietSiteBundle:Article:list.html.twig' %}
    <a class="btn btn-info right" href="{{ mlpath('_articles_newest', {'page': 2}) }}">View more ...</a>
  </div>
</div>
{% endblock %}
