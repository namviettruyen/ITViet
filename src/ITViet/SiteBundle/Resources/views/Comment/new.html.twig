
{% if isMember %}
{% set member = app.security.getToken().getUser() %}
<img class="img-small" src="{{ member.getGravatar(32) }}" alt="Ava" />
<div class="comment-body">
  <form action="{{ mlpath('_member_comment_create',{'article_id':article.id}) }}" method="post" name="frm">
    <textarea class="post-wall cmt" name="txtCmt" id="txtCmt"></textarea>
    <input type="submit" class="btn btn-primary" name="post" value="{% trans %}Post comment{% endtrans %}"  onclick="return checkForm();" />
  </form>
</div>
{% else %}
<p class="muted">
  <small>
    {% trans with {'%href%': mlpath('_member_to_login')} %}You have to <a href="%href%">login</a> to post comment{% endtrans %}
  </small>
</p>
{% endif %}

